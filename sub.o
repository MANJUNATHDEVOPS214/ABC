#include <stdio.h> // Required for input/output functions like printf and scanf

int main() {
    int num1, num2, result; // Declare integer variables to store the numbers and the result

    // Prompt the user to enter the first number
    printf("Enter the first number: ");
    scanf("%d", &num1); // Read the first integer from the user and store it in num1

    // Prompt the user to enter the second number
    printf("Enter the second number: ");
    scanf("%d", &num2); // Read the second integer from the user and store it in num2

    // Perform the subtraction
    result = num1 - num2; // Subtract num2 from num1 and store the difference in result

    // Display the result
    printf("The difference between %d and %d is: %d\n", num1, num2, result);

    return 0; // Indicate successful program execution
}
